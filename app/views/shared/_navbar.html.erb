<% if controller_name =='pages' && action_name == 'home' %>
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon navbar-lewagon-alt">
<% else %>
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
<% end %>
  <%= link_to root_path,  class: "navbar-brand" do %>
    <%= image_tag('logo.svg', class: 'navbar-logo-icon') %>
      <% if controller_name =='pages' && action_name == 'home' %>
        <span class="navbar-wordmark navbar-wordmark-alt">Pythia</span>
      <% else %>
        <span class="navbar-wordmark navbar-wordmark">Pythia</span>
      <% end %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>

          <li class="nav-item">
             <% if controller_name =='pages' && action_name == 'home' %>
             <%= link_to "My Files", csv_files_path, class: "button-tertiary mr-3" %>
              <% else %>
            <%= link_to "My Files", csv_files_path, class: "button-secondary mr-3" %>
             <% end %>
          </li>


        <% if controller_name =='csv_files' && action_name == 'show' %>
          <li class="nav-item">
            <%= link_to "New Query", new_csv_file_query_path(@csv_file), class: "button-primary mr-3" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Upload File", new_csv_file_path, class: "button-primary mr-3" %>
          </li>
        <% end %>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/louisleslie", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

            <%= link_to "My Files", csv_files_path, class: "dropdown-item" %>
            <%= link_to "Upload a File", new_csv_file_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "button-secondary mr-3" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign Up", new_user_registration_path, class: "button-primary" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
