
<div class="show-page-filters-container">
      <div class="show-page-filters-menu-container">
      <ul class="nav nav-tabs show-page-filters-tabs-container" id="myTab" role="tablist">
        <li class="nav-item show-page-filters-tab-container">
          <a class="nav-link active show-page-filters-tab-link" id="home-tab" data-toggle="tab" href="#filters" role="tab" aria-controls="home" aria-selected="true">Filters</a>
        </li>
        <li class="nav-item show-page-filters-tab-container">
          <a class="nav-link show-page-filters-tab-link" id="profile-tab" data-toggle="tab" href="#SQL" role="tab" aria-controls="profile" aria-selected="false">SQL</a>
        </li>
      </ul>
      <% if user_signed_in? && @query.csv_file.user == current_user %>
        <div class="show-page-filters-buttons-container">
          <%= link_to 'Download Query as CSV', csv_file_query_path(id: @query.id, format: :csv), class: "button-utility mr-3" %>
          <%= link_to "Edit", edit_csv_file_query_path(@query) , class: "button-utility mr-3"  %>
          <%= link_to "Delete", csv_file_query_path(@query), class: "button-utility", method: :delete, data: { confirm: "Deleting this query cannot be undone. Are you sure you want to delete?" } %>

        </div>
      <% end %>
    </div>
      <div class="tab-content show-page-filters-tab-content-container" id="myTabContent">
        <div class="tab-pane active show-page-filters-tab-pane" id="filters" role="tabpanel" aria-labelledby="profile-tab">
          <div class="show-page-filter-pills-container">
            <% @query.filters.each_with_index do |filter, index| %>
            <div class="show-page-filter-pill"><%= filter.verb %> <%= filter.column_name %> <%= filter.comparison_operator %> <%= filter.value %></div>
          <% end %>
          </div>
        </div>
        <div class="tab-pane fade show-page-filters-tab-pane" id="SQL" role="tabpanel" aria-labelledby="profile-tab">
          <div class="show-page-filters-sql-container">
            <p class="show-page-sql-query" id="typed-strings"><%= @display_query %></p>
          </div>
        </div>
      </div>
</div>
