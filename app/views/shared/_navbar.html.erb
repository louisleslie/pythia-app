<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag('database.svg', style: "color: #8B5CF6;") %>
    Pythia
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "View My Files", csv_files_path, class: "nav-link" %>
        </li>
        <% if controller_name =='csv_files' && action_name == 'show' %>
          <li class="nav-item">
            <%= link_to "New Query", new_csv_file_query_path(@csv_file), class: "btn btn-primary" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Upload a File", new_csv_file_path, class: "btn btn-primary" %>
          </li>
        <% end %>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "View My Files", csv_files_path, class: "dropdown-item" %>
            <%= link_to "Upload a File", new_csv_file_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
